<div class="library">

    <nav class="library-nav">

        <div class="library_title library-nav-item">
            <a href="/library">
                <h2 class='libTitle'>Library</h2>
            </a>
        </div>

        <div class="addPlaylist library-nav-item">
            <a style="display: flex; align-items: center;" href="/spotify-auth"><span
                    style="font-size:36px; color:#f5f5f5;">Add a Playlist</span><span class="material-icons"
                    style="font-size: 90px; color: #f5f5f5;">add</span>
            </a>
        </div>

    </nav>

    <div class="container">
        <div class="row">
            {{#each playlist}}
            <div class="col library-img">
                <div>
                    <img onclick="goToPlaylist(this.id)" id={{id}} src={{playlist_artwork}}
                        style="width: 300px; height: 300px; object-fit:cover;" />
                    <h2 class="card-text card-text-css">{{playlist_name}}</h2>
                </div>

            </div>
            {{/each}}
        </div>
    </div>

</div>

<script>
    function goToPlaylist(id) {
        let playlistId = id;
        window.location.href = "/playlist/" + playlistId;
    }
</script>